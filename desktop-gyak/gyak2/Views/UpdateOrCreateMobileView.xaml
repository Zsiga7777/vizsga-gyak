<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="gyak2.Views.UpdateOrCreateMobileView"
             xmlns:viewmodels="clr-namespace:gyak2.ViewModels"
             x:DataType="viewmodels:UpdateORCreateMobileViewModel"
             Title=""
             x:Name="this">
    <VerticalStackLayout WidthRequest="600" HorizontalOptions="Center">
        <Label Text="Gyártó:"/>
        <Entry Text="{Binding Manifacturer}"/>
        <Label Text="Model:"/>
        <Entry Text="{Binding Model}"/>
        <Label Text="Tároló kapacitás:"/>
        <Entry Text="{Binding StorageCapacity}"/>

        <Button Text="Save" Command="{Binding SaveCommand}"/>
    </VerticalStackLayout>
</ContentPage>